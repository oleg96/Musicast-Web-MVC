@model Musicast_Web_MVC.Models.Image
@{
    ViewBag.Title = "Delete image";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/normalize.css" rel="stylesheet">
    <link href="~/Content/MYXJGM.css" rel="stylesheet prefetch">
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/popup_img.js"></script>
    <title></title>
</head>
<body class="body-style">
    <div class="panel panel-primary">
        <div class="panel-heading">Delete picture</div>
        <div class="innerPanel">
            <p>
                @Html.Raw("<img class='image' src=\"data:image/jpeg;base64,"
                + Convert.ToBase64String(Model.ByteImage) + "\" />")
            </p>
            @using (Html.BeginForm())
            {
                <input type="submit" class="btn btn-danger" value="Delete" />
            }
        </div>
    </div>

    <a href="@Url.Action("MusicGen")" class="btn btn-primary" role="button">Return to list</a>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
