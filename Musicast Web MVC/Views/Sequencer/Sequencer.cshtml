@{
    ViewBag.Title = "Sequencer";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="../Content/normalize.css" rel="stylesheet">
    <link href="../Content/MYXJGM.css" rel="stylesheet prefetch">
    <link href="../content/style.css" rel="stylesheet">
    <title></title>
</head>
<body style="background-image:url(../Images/1-temnaya-tekstura-kristalov.png)">
    <div class="tabs">
        <input id="tab1" type="radio" name="tabs" checked>
        <label for="tab1" title="Synth 1">Synth 1</label>

        <input id="tab2" type="radio" name="tabs">
        <label for="tab2" title="Synth 2">Synth 2</label>

        <input id="tab3" type="radio" name="tabs">
        <label for="tab3" title="Synth 3">Synth 3</label>

        <section id="content1">
            <iframe id="ifrmSynth1" src="../synth.htm" width="100%" style="height: 601px" frameborder=no></iframe>
        </section>
        <section id="content2">
            <iframe id="ifrmSynth2" src="../synth.htm" width="100%" style="height: 601px" frameborder=no></iframe>
        </section>
        <section id="content3">
            <iframe id="ifrmSynth3" src="../synth.htm" width="100%" style="height: 601px" frameborder=no></iframe>
        </section>
    </div>

    <div>
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <pattern id="smallGrid" width="10" height="55" patternUnits="userSpaceOnUse">
                    <path d="M 10 0 L 0 0 0 55" fill="none" stroke="gray" stroke-width="0.5" />
                </pattern>
                <pattern id="grid" width="80" height="550" patternUnits="userSpaceOnUse">
                    <rect width="550" height="550" fill="url(#smallGrid)" />
                    <path d="M 550 0 L 0 0 0 550" fill="none" stroke="gray" stroke-width="1" />
                </pattern>
            </defs>

            <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>
    <div id="app-song">
        <canvas id="tracks-patterns" width="100" height="550"></canvas>
        <div id="all-patterns">
            <canvas id="position-labels-patterns" width="28800" height="50"></canvas>
            <canvas id="colored-patterns" width="28800" height="550"></canvas>
            <canvas id="grid-patterns" width="28800" height="550"></canvas>
            <canvas id="pat-patterns" width="28800" height="550"></canvas>
        </div>
    </div>

    <iframe id="ifrmDrum" src="../drum.html" style="height: 600px; width: 44%;" frameborder=no></iframe>
    </div>

    <div class="app">
        <div class="app-region" id="r-top">
            <div class="module transport">
                <h4>Transport</h4>
                <button class="transport-play" title="Play" onclick="playPattern(); return false;">►</button>
                <button class="transport-stop" title="Stop" onclick="stopPattern(); return false;">■</button>
            </div>
            <div class="module transport">
                <h4>Notes</h4>
                <input type="radio" checked name="note" id="1/1" /><label for="1/1">1/1</label>
                <input type="radio" name="note" id="1/2" /><label for="1/2">1/2</label>
                <input type="radio" name="note" id="1/4" /><label for="1/4">1/4</label>
                <input type="radio" name="note" id="1/8" /><label for="1/8">1/8</label>
                <input type="radio" name="note" id="1/16" /><label for="1/16">1/16</label>
            </div>
            <div class="module transport">
                <h4>Tools</h4>
                <input type="radio" checked name="tool" id="add"><label for="add">Add</label>
                <input type="radio" name="tool" id="remove" /><label for="remove">Remove</label>
            </div>
        </div>
    </div>
    @*<div id="content">
        <div id="div-keyboard">
            <img alt="" src="../Images/keyboard.png" style="width:56px; height:630px" />
        </div>
        <div id="div-pattern">
        </div>

    </div>*@
    <div id="roll_keyboard">
        <div id="keyboard">
            <canvas id="keys" width="100" height="700"></canvas>
            <canvas id="note_labels" width="100" height="700"></canvas>
        </div>
        <div id="roll">
            <canvas id="colored" width="896" height="700"></canvas>
            <canvas id="grid" width="896" height="700"></canvas>
            <canvas id="notes" width="896" height="700"></canvas>
        </div>
    </div>
    <script src="../Scripts/pianoRoll.js"></script>
</body>
</html>
